<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="plutoPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.vieira.pluto.entity.Uf</class>
        <class>com.vieira.pluto.entity.TipoEndereco</class>
        <class>com.vieira.pluto.entity.TipoPessoa</class>
        <class>com.vieira.pluto.entity.TipoTelefone</class>
        <class>com.vieira.pluto.entity.Pessoa</class>
        <class>com.vieira.pluto.entity.Telefone</class>
        <class>com.vieira.pluto.entity.Usuario</class>
        <class>com.vieira.pluto.entity.Sexo</class>
        <class>com.vieira.pluto.entity.Endereco</class>
        <class>com.vieira.pluto.entity.Municipio</class>
        <class>com.vieira.pluto.entity.EstadoCivil</class>
        <class>com.vieira.pluto.entity.Email</class>
        <class>com.vieira.pluto.entity.Cliente</class>
        <class>com.vieira.pluto.entity.Empresa</class>
        <class>com.vieira.pluto.entity.ModeloVeiculo</class>
        <class>com.vieira.pluto.entity.Cor</class>
        <class>com.vieira.pluto.entity.PessoaVeiculo</class>
        <class>com.vieira.pluto.entity.Fabricante</class>
        <class>com.vieira.pluto.entity.TipoItemComercializavel</class>
        <class>com.vieira.pluto.entity.ItemComercializavel</class>
        <class>com.vieira.pluto.entity.FormaPagamento</class>
        <class>com.vieira.pluto.entity.StatusOrcamento</class>
        <class>com.vieira.pluto.entity.VeiculoOrcamento</class>
        <class>com.vieira.pluto.entity.Orcamento</class>
        <class>com.vieira.pluto.entity.ItemOrcamento</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <shared-cache-mode>NONE</shared-cache-mode>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/pluto"/>
            <property name="javax.persistence.jdbc.password" value="123"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
